# Secure Configuration Template for Production Deployment
# Copy this file to .env and fill in actual values

# Database Configuration
DATABASE_URL=postgresql://your_username:your_secure_password@your_host:5432/your_database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration  
REDIS_URL=redis://your_username:your_password@your_host:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_SSL=true

# API Keys and Secrets
OPENAI_API_KEY=sk-your-openai-key-here
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://yourdomain.com/auth/linkedin/callback

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-different-from-above
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/app/application.log
SYSLOG_HOST=your-log-server.com
SYSLOG_PORT=514

# Service URLs (Internal)
CORE_ORCHESTRATOR_URL=http://core-orchestrator:3000
STYLE_ENGINE_URL=http://style-engine:8002
ANALYTICS_PLATFORM_URL=http://analytics:8003

# External Service URLs
LINKEDIN_API_BASE=https://api.linkedin.com/v2
OPENAI_API_BASE=https://api.openai.com/v1

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict

# File Upload Security
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.txt,.md,.csv,.json
UPLOAD_PATH=/secure/uploads

# Monitoring and Health
HEALTH_CHECK_TIMEOUT=30
METRICS_ENABLED=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=production
DEBUG=false
TESTING=false